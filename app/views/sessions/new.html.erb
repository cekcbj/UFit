<div class="jumbotron landing-hero signup-form">
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class = "col-md-6 col-md-offset-3 translucent-bg">
          <h3 class="pretty-font">Please Log In</h3>
          <%= form_tag do %>
          <div class = "form-group">
            <%= label_tag :email, "",class:"pretty-font"%>
            <%= text_field_tag :email,"", class:'form-control' %>
          </div>
          <div class = "form-group pretty-font">
            <%= label_tag :password %>
            <%= password_field_tag :password,"", class: 'form-control' %>
          </div>

          <div class = "form-group">
          <%= submit_tag "Log In", class:"btn btn-primary" %> or <%= link_to "Sign Up", sign_up_path %>
        </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

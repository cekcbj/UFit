

<div class="container">
    <div class ="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 new-workout pretty-font">
        <div class="translucent-bg">
          <%= simple_form_for @workout do |f| %>
          <%= f.input :name, :hint => 'Name your workout'  %>
          <label>Interval</label>
          <%= f.schedule_select :schedule %>
          <%= f.button :submit, :disable_with => 'Please wait ...' %>
          <% end %>
        </div>
      </div>
  </div>
</div>
